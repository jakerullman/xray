{
  "name": "xray",
  "version": "1.1",
  "description": "Bypass article paywalls.",
  "manifest_version": 2,
  "browser_action": {
  	"name": "xray"
  }, 
  "icons": { "16": "images/icon_16.png",
             "48": "images/icon_48.png",
             "128": "images/icon_128.png" },
  "background": {
      "persistent": true,
      "scripts": [ "background.js" ]
   },
  "permissions": ["http://*/*", "https://*/*", "webRequest", "webRequestBlocking"]
}
